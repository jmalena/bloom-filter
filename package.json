{
  "name": "@jmalena/bloom-filter",
  "version": "1.0.2",
  "description": "Simple and dependency-free Bloom filter implementation",
  "main": "lib/bloom-filter.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "clean": "rm -rf lib",
    "test": "jest --verbose",
    "check:lint": "eslint src",
    "check:flow": "flow check",
    "build": "babel src --out-dir lib",
    "prepublish": "npm run clean && npm run check:lint && npm run check:flow && npm test && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jmalena/bloom-filter"
  },
  "keywords": [
    "data structure",
    "bloom filter"
  ],
  "devDependencies": {
    "babel-cli": "~6.23.0",
    "babel-eslint": "~7.1.1",
    "babel-plugin-syntax-flow": "~6.18.0",
    "babel-plugin-transform-class-properties": "~6.23.0",
    "babel-plugin-transform-flow-comments": "~6.22.0",
    "babel-preset-es2015": "~6.22.0",
    "eslint": "~3.15.0",
    "eslint-config-standard": "~6.2.1",
    "eslint-plugin-promise": "~3.4.2",
    "eslint-plugin-standard": "~2.0.0",
    "flow-bin": "~0.39.0",
    "jasmine-check": "~0.1.5",
    "jest": "~18.1.0"
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "transform-class-properties",
      "transform-flow-comments",
      "syntax-flow"
    ]
  },
  "eslintConfig": {
    "extends": "standard",
    "parser": "babel-eslint",
    "plugins": [
      "standard"
    ],
    "env": {
      "jest": true
    }
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/setup-jest-env.js"
  }
}
